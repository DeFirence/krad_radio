#!/usr/bin/env python

programs = """
krad_flac_test.c
""".split()

sources = """
krad_flac.c
""".split()

depsources = """
../krad_tone/krad_tone.c
""".split()

includedirs = """
../krad_tone/
""".split()

libs = ["flac"]

def configure(conf):
	
	for l in libs:
		conf.check_cfg(package = l, uselib_store = l, args='--cflags --libs')


def build(bld):


	for p in programs:

		bld(features = 'c cprogram', 
			source = sources + depsources + [p], 
			includes = includedirs, 
			target = p.replace(".c", ""), 
			uselib = libs)

