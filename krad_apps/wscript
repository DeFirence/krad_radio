includedirs = """
../krad_tools/krad_tone/
../krad_tools/krad_audio/
../krad_tools/krad_dirac/
../krad_tools/krad_theora/
../krad_tools/krad_jack/
../krad_tools/krad_pulse/
../krad_tools/krad_alsa/
../krad_tools/krad_vpx/
../krad_tools/krad_v4l2/
../krad_tools/krad_flac/
../krad_tools/krad_vorbis/
../krad_tools/krad_gui/
../krad_tools/krad_opus/
../krad_tools/krad_ring/
../krad_tools/krad_ogg/
../krad_tools/krad_io/
